        <li><a href="/">Logout</a></li>
    </ul>
</nav>
<br>
<div class="addEmp">
    <ul>
        <li><a href="/employeeRegister">Add Employee</a></li>
    </ul>
    </div>
    <table class="table">
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Department</th>
            <th>Actions</th>
        </tr>
        {{#each employees}}
        <tr>
            <td>{{this.id}}</td>
            <td>{{this.name}}</td>
            <td>{{this.email}}</td>
            <td>{{this.phone}}</td>
            <td>{{this.department}}</td>
            <td>
                <form action="/update/{{this.id}}" method="POST" style="display:inline;">
                    <input type="text" name="name" placeholder="Name" value="{{this.name}}" required>
                    <input type="email" name="email" placeholder="Email" value="{{this.email}}" required>
                    <input type="int" name="phone" placeholder="Phone Number" value="{{this.phone}}" required>
                    <input type="text" name="department" placeholder="Department Name" value="{{this.department}}" required>
                    <button type="submit">Update</button>
                </form>
                <form action="/delete/{{this.id}}" method="POST" style="display:inline;">
                    <button type="submit" onclick="return confirm('Are you sure?')">Delete</button>
                </form>
            </td>
        </tr>
        {{/each}}
    </table>


<br>
    </div>
