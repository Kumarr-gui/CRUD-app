<body class="index-bg-editEmployee">
<nav>
    <h4>Update Employee details</h4>
    <ul>
        <li><a href="/">Logout</a></li>
    </ul>
</nav>


<form action="/update/{{employee.id}}" method="POST">
  <div class="editForm">
    <div class="form-group">
            <label for="name"><b>Name</b></label>
            <input type="text" id="name" name="name" value="{{employee.name}}" required>
        </div>
        <br>
        <div class="form-group">
            <label for="email"><b>Email</b></label>
            <input type="email" id="email" name="email" value="{{employee.email}}" required>
        </div>
        <br>
        <div class="form-group">
            <label for="phone"><b>Phone</b></label>
            <input type="text" id="phone" name="phone" value="{{employee.phone}}" required>
        </div>
        <br>
        <div class="form-group">
            <label for="department"><b>Department</b></label>
            <input type="text" id="department" name="department" value="{{employee.department}}" required>
        </div>
        <br>
        <button class="clickbtn-editEmployee" type="submit" >Update Employee</button>
    </div>
</form>

